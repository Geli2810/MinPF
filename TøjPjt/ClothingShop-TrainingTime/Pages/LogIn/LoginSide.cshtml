@page
@model ClothingShop_TrainingTime.Pages.LogIn.LoginSideModel

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
<div class="login-page">
    <section class="forms-section">
        <h1 class="section-title">Animated Forms</h1>
        <div class="forms">
            <div class="form-wrapper is-active">
                <button type="button" class="switcher switcher-login">
                    Login
                    <span class="underline"></span>
                </button>
                <div  asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form method="post" class="form form-signup">
                    <fieldset>
                        <legend>Please, enter your email and password for login.</legend>
                        <div class="input-block">
                            <label asp-for="Username" class="control-label"></label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="input-block">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </fieldset>
                    <button type="submit" asp-page-handler="Log" class="btn-login">Login</button>
                </form>
            </div>



            <div class="form-wrapper">
                <button type="button" class="switcher switcher-signup">
                    Sign Up
                    <span class="underline"></span>
                </button>
                <form method="post" class="form form-signup">
                    <fieldset>
                        <legend>Please, enter your email, password and password confirmation for sign up.</legend>
                        <div class="row justify-content-center">
                            <div class="col-md-10" style="max-width: 850px;">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="input-block">
                                    <label asp-for="Kunden.Navn" class="control-label"></label>
                                    <input asp-for="Kunden.Navn" class="form-control" />
                                    <span asp-validation-for="Kunden.Navn" class="text-danger"></span>
                                </div>

                                <div class="input-block">
                                    <label asp-for="Kunden.Email" class="control-label"></label>
                                    <input asp-for="Kunden.Email" class="form-control" />
                                    <span asp-validation-for="Kunden.Email" class="text-danger"></span>
                                </div>

                                <div class="input-block">
                                    <label asp-for="Kunden.Telefon" class="control-label"></label>
                                    <input asp-for="Kunden.Telefon" class="form-control" />
                                    <span asp-validation-for="Kunden.Telefon" class="text-danger"></span>
                                </div>

                                <div class="input-block">
                                    <label asp-for="Kunden.Adresse" class="control-label"></label>
                                    <input asp-for="Kunden.Adresse" class="form-control" />
                                    <span asp-validation-for="Kunden.Adresse" class="text-danger"></span>
                                </div>

                                <div class="input-block">
                                    <input type="submit" asp-page-handler="AddUser" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </section>
</div>
